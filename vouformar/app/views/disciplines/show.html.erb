<!-- BASIC FORM ELELEMNTS -->
<div class="row mt">
   <div class="col-lg-12">
      <div class="form-panel">
         <h4 class="mb"><i class="fa fa-angle-right"></i> Informações dos Usuários</h4>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Codigo</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.code %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Nome</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.name %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Descrição</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.description %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Créditos</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.credits %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Turma</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.classroom %></p>
               </div>
            </div>
         </form>                           
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Periodo</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.period %></p>
               </div>
            </div>
         </form>  
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Horário</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.horary %></p>
               </div>
            </div>
         </form>  
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Local</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.local %></p>
               </div>
            </div>
         </form>  
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Pré-Requisitos</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @discipline.prerequisites %></p>
               </div>
            </div>
         </form>  

         <form class="form-horizontal style-form" method="get">
            <a href="<%= edit_discipline_path(@discipline) %>"><button type="button" class="btn btn-primary"> Editar </button></a>
            <%= link_to  "Deletar Perfil", { action: :destroy, id: @discipline.id }, method: :delete, data: { confirm: 'Deletar permanentemente seu perfil?' }, :class => "btn btn-danger active"%>
          </form>  
      </div>
   </div>
   <!-- col-lg-12-->       
</div>
<!-- /row -->